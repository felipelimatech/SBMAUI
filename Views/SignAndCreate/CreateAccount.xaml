<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SBMAUI.Views.SignAndCreate.CreateAccount"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="">

    <ScrollView>
        <Grid>
            <VerticalStackLayout
                Margin="0,0,0,10"
                Padding="8"
                Spacing="8">

                <Label
                    Margin="0,0,0,10"
                    FontAttributes="Bold"
                    FontSize="40"
                    HorizontalOptions="Center"
                    Text="Create New Account" />
                <!--<Label FontSize="12" Text="Boxes marked with * are required"></Label>-->
                <Border
                    BackgroundColor="{StaticResource Primary}"
                    HeightRequest="5"
                    WidthRequest="800" />
                <Label
                    FontSize="16"
                    Text="First Name*"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="FirstNameEntry"
                        Placeholder="First Name"
                        TextColor="Black" />
                </Grid>

                <Label
                    FontSize="16"
                    Text="Last Name*"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="LastNameEntry"
                        Placeholder="Last Name"
                        TextColor="Black" />
                </Grid>

                <Label
                    FontSize="16"
                    Text="Email*"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="EmailEntry"
                        Placeholder="Email"
                        TextColor="Black" />
                </Grid>

                <Label
                    FontSize="16"
                    Text="Username*"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="UserNameEntry"
                        Placeholder="Username"
                        TextColor="Black" />
                </Grid>

                <Label
                    FontSize="16"
                    Text="Password*"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Password"
                        TextColor="Black" />
                </Grid>

                <Label
                    FontSize="16"
                    Text="Re-type Password*"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="ReTypedPasswordEntry"
                        Placeholder="Password"
                        TextColor="Black" />
                </Grid>


                <Label
                    FontSize="16"
                    Text="User Image"
                    WidthRequest="400" />
                <Grid Padding="5" WidthRequest="400">
                    <Frame BackgroundColor="White" />
                    <Entry
                        x:Name="UserImageEntry"
                        Placeholder="Provide a Link to picture here (Optional)"
                        TextColor="Black" />
                </Grid>

                <Label
                    Margin="0,10"
                    FontSize="16"
                    Text="Upload Profile Picture"
                    WidthRequest="400" />
                <HorizontalStackLayout WidthRequest="400">
                    <ImageButton
                        x:Name="UploadImageBtn"
                        Clicked="UploadImageBtn_Clicked"
                        HeightRequest="25"
                        Source="upload.png"
                        WidthRequest="25" />
                    <Image
                        x:Name="ProfileImage"
                        HeightRequest="50"
                        Source="stockprofileimage.png"
                        WidthRequest="50" />
                </HorizontalStackLayout>
                <Label
                    x:Name="ErrorLabel"
                    Margin="0,0,0,10"
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    IsVisible="False"
                    TextColor="Red" />
                <Button
                    x:Name="SaveBtn"
                    Margin="0,30"
                    Clicked="CompleteCreation"
                    HorizontalOptions="Center"
                    Text="Save"
                    WidthRequest="250" />

            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>