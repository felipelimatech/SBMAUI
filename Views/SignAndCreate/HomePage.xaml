<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SBMAUI.Views.SignAndCreate.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Study Buddy">

    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="160,auto,*" RowDefinitions="160,auto">

                <BoxView
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Fill"
                    Color="{x:StaticResource Primary}" />

                <Frame
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Margin="0,100,0,0"
                    Padding="0"
                    CornerRadius="55"
                    HorizontalOptions="Center">
                    <Image
                        HeightRequest="100"
                        Source="ntclogo.png"
                        WidthRequest="100" />
                </Frame>
            </Grid>
            <VerticalStackLayout Padding="10" Spacing="10">

                <StackLayout Margin="0,30">
                    <Frame
                        Grid.Row="1"
                        Grid.Column="1"
                        Padding="0"
                        CornerRadius="80"
                        HeightRequest="150"
                        HorizontalOptions="Center"
                        IsClippedToBounds="True"
                        ToolTipProperties.Text="Click to edit your profile."
                        WidthRequest="150">
                        <Image
                            x:Name="UserImage"
                            Aspect="AspectFill"
                            HeightRequest="150"
                            WidthRequest="150" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserImage_Clicked" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <Label x:Name="UserNameText" HorizontalOptions="Center" />
                    <Label HorizontalOptions="Center" Text="Create Decks and Deck Groups in MyStudies or Start studying!" />
                </StackLayout>
                <VerticalStackLayout
                    Padding="10"
                    HorizontalOptions="Center"
                    Spacing="30">
                    <Button
                        x:Name="MyStudiesBtn"
                        Clicked="GoToMyStudies"
                        FontSize="Medium"
                        Text="My Studies"
                        WidthRequest="200" />
                    <Button
                        x:Name="AdminButton"
                        Clicked="GoToAdminHomePage"
                        FontSize="Medium"
                        IsVisible="False"
                        Text="Admin"
                        WidthRequest="200" />
                    <Button
                        x:Name="StudySessionBtn"
                        Clicked="GoToStudySession"
                        FontSize="Medium"
                        Text="Study Session"
                        WidthRequest="200" />
                </VerticalStackLayout>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>