<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SBMAUI.Views.MyStudies.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DashboardPage">
    <ContentPage.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="Green" />
            <Style.Triggers>
                <DataTrigger
                    Binding="{Binding IsCorrect}"
                    TargetType="Label"
                    Value="False">
                    <Setter Property="TextColor" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CardView" TargetType="Frame">
            <Setter Property="BorderColor" Value="{StaticResource Primary}" />
            <Setter Property="HasShadow" Value="{OnPlatform iOS=false, MacCatalyst=false, Default=true}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="50,0,50,0" />
            <Setter Property="Background" Value="{StaticResource LightBackground}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="IsClippedToBounds" Value="True" />
        </Style>
    </ContentPage.Resources>

    <Shell.TitleView>
        <HorizontalStackLayout>
            <Button
                x:Name="HomeBtn"
                Clicked="GoToHomePage"
                Text="Home" />
            <Button
                x:Name="DashboardBtn"
                Clicked="GoToDashboardPage"
                Text="Dashboard" />
            <Button
                x:Name="FlashcardBtn"
                Clicked="GoToFlashcardPage"
                Text="Flashcards" />
            <Button
                x:Name="DeckBtn"
                Clicked="GoToDeckPage"
                Text="Decks" />
            <Button
                x:Name="DeckGroupBtn"
                Clicked="GoToDeckGroupPage"
                Text="Deck Groups" />
            <Button Clicked="LogOut" Text="Logout" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        RowSpacing="0">

        <StackLayout Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Label
                FontAttributes="Bold"
                FontSize="40"
                HorizontalOptions="Center"
                Text="Card Stats"
                VerticalOptions="Center" />
            <ProgressBar
                x:Name="StatsProgressBar"
                HeightRequest="70"
                ProgressColor="Green"
                WidthRequest="200" />
            <Label
                x:Name="ProgressLabel"
                FontSize="16"
                HorizontalOptions="Center" />
        </StackLayout>

        <CollectionView
            x:Name="AllStudyFlashcardsListView"
            Grid.ColumnSpan="3"
            Margin="0,160,0,0"
            BackgroundColor="Transparent"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame
                            Padding="0"
                            HeightRequest="125"
                            Style="{StaticResource CardView}">
                            <Grid Padding="0" ColumnDefinitions="125, *">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="125"
                                    Source="{Binding FlashCard.FlashCardQuestionImage, TargetNullValue='stockprofileimage.png'}"
                                    WidthRequest="125" />
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    Padding="10"
                                    VerticalOptions="Center">
                                    <Label Style="{StaticResource LabelStyle}" Text="{Binding FlashCard.FlashCardQuestion}" />
                                    <Label x:Name="TestLabel">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{} From {0}-{1}">
                                                <Binding Path="StudySession.Deck.DeckName" />
                                                <Binding Path="StudySession.StartTime" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            x:Name="DashboardStatsBtn"
            Grid.Row="1"
            Grid.Column="0"
            Margin="8"
            Clicked="GoToDashboardPage"
            Text="Stats" />
        <Button
            x:Name="DashboardHistoryBtn"
            Grid.Row="1"
            Grid.Column="1"
            Margin="8"
            Clicked="GoToDashboardHistoryPage"
            Text="History" />
    </Grid>

</ContentPage>