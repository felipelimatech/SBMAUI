<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SBMAUI.Views.Edit.EditFlashCardPageWithDeckGroup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EditFlashCardPage">
    <Shell.TitleView>
        <HorizontalStackLayout>
            <Button
                x:Name="HomeBtn"
                Clicked="GoToHomePage"
                Text="Home" />
            <Button
                x:Name="DashboardBtn"
                Clicked="GoToDashboardPage"
                Text="Dashboard" />
            <Button
                x:Name="FlashcardBtn"
                Clicked="GoToFlashcardPage"
                Text="Flashcards" />
            <Button
                x:Name="DeckBtn"
                Clicked="GoToDeckPage"
                Text="Decks" />
            <Button
                x:Name="DeckGroupBtn"
                Clicked="GoToDeckGroupPage"
                Text="Deck Groups" />
            <Button Clicked="LogOut" Text="Logout" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ContentPage.Content>
        <Grid
            ColumnDefinitions="*,*"
            ColumnSpacing="5"
            RowDefinitions="*,Auto"
            RowSpacing="0">
            <Border
                Grid.ColumnSpan="2"
                Margin="90,20,90,20"
                Stroke="{StaticResource Primary}"
                StrokeShape="RoundRectangle 10,10,10,10"
                StrokeThickness="4">
                <ScrollView Grid.ColumnSpan="2">
                    <StackLayout
                        Margin="0,15,0,0"
                        Padding="10,0,10,20"
                        HorizontalOptions="Center"
                        Spacing="10"
                        VerticalOptions="Center">
                        <Label
                            Margin="0,0,0,30"
                            FontAttributes="Bold"
                            FontSize="40"
                            HorizontalOptions="Center"
                            Text="Edit Flashcard"
                            VerticalOptions="Center" />
                        <StackLayout
                            Padding="20"
                            Spacing="20"
                            VerticalOptions="Center">

                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Flashcard Question" />
                            <Entry
                                x:Name="FlashCardQuestionEntry"
                                MinimumWidthRequest="400"
                                Placeholder="Enter a Question" />
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Question Image Link" />
                                <Entry x:Name="FlashcardQuestionImageEntry" Placeholder="Paste a link to an image here (Optional)" />
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalOptions="Center"
                                    Text="Or" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Upload Question Image" />
                                <ImageButton
                                    x:Name="UploadQuestionImageBtn"
                                    Clicked="UploadQuestionImageBtn_Clicked"
                                    HeightRequest="25"
                                    Source="upload.png"
                                    WidthRequest="25" />
                            </VerticalStackLayout>

                            <Label
                                Margin="0,15,0,0"
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Flashcard Answer" />
                            <Entry x:Name="FlashCardAnswerEntry" Placeholder="Enter an answer" />
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Answer Image Link" />
                                <Entry x:Name="FlashcardAnswerImageEntry" Placeholder="Paste a link to an image here (Optional)" />
                                <Label
                                    FontAttributes="Bold"
                                    HorizontalOptions="Center"
                                    Text="Or" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Upload Answer Image" />
                                <ImageButton
                                    x:Name="UploadAnswerImageBtn"
                                    Clicked="UploadAnswerImageBtn_Clicked"
                                    HeightRequest="25"
                                    Source="upload.png"
                                    WidthRequest="25" />
                            </VerticalStackLayout>
                        </StackLayout>
                        <StackLayout
                            Grid.Column="1"
                            Margin="10"
                            Padding="10"
                            VerticalOptions="Center">
                            <Label FontSize="16" Text="Make Public" />
                            <CheckBox
                                x:Name="IsPublicCheckBox"
                                CheckedChanged="CheckBox_CheckedChanged"
                                HorizontalOptions="Start" />
                        </StackLayout>
                        <StackLayout
                            Grid.Column="1"
                            Margin="10"
                            VerticalOptions="Center">
                            <Label
                                x:Name="WarningLabel"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Center"
                                IsVisible="false"
                                TextColor="Red" />
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </Border>
            <Button
                x:Name="FinishEditingBtn"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"
                Clicked="FinishEditingBtn_Clicked"
                HeightRequest="20"
                Text="Done Editing" />
            <Button
                x:Name="CancelBtn"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"
                Clicked="CancelBtn_Clicked"
                HeightRequest="20"
                IsVisible="false"
                Text="Cancel" />
            <Button
                x:Name="DeleteBtn"
                Grid.Row="1"
                Grid.Column="1"
                Margin="8"
                BackgroundColor="Red"
                Clicked="DeleteBtn_Clicked"
                Text="Delete Deck" />
            <Button
                x:Name="FinishDeleteBtn"
                Grid.Row="1"
                Grid.Column="1"
                Margin="8"
                BackgroundColor="Red"
                Clicked="FinishDeleteBtn_Clicked"
                HeightRequest="20"
                IsVisible="false"
                Text="Finish Delete" />
        </Grid>
    </ContentPage.Content>
</ContentPage>